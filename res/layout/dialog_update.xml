<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <TextView
        	android:id="@+id/dialog_update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/list_title"
            android:textSize="16sp"
            android:gravity="center|left"
            android:layout_margin="17dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/list_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        <Button
        	android:id="@+id/dialog_update_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/pop_button_color"
            android:text="@string/no_thanks" />
	    <ImageView
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:src="@color/list_content" />
        <Button
        	android:id="@+id/dialog_update_enter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/pop_button_color"
            android:text="@string/update_now" />
    </LinearLayout>
</LinearLayout>
